<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_caret_down"
        app:layout_constraintBottom_toBottomOf="@id/tv_working_schedule"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_working_schedule" />

    <TextView
        android:id="@+id/tv_working_schedule"
        style="@style/Core.Restoran.Title.Black.NotBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Время работы: с 12.00 - 23:00"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_have_time"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/shape_dot_green_rate"
        app:layout_constraintBottom_toBottomOf="@+id/tv_working_schedule"
        app:layout_constraintLeft_toRightOf="@id/tv_working_schedule"
        app:layout_constraintTop_toTopOf="@id/tv_working_schedule" />

</androidx.constraintlayout.widget.ConstraintLayout>