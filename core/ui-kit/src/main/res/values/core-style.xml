<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Core." />

    <style name="Core.Style" />

    <style name="Core.Style.Background">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Core.Style.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Input Layout  -->
    <style name="Core.Style.TextInputField" parent="Widget.Design.TextInputLayout"></style>

    <style name="Core.Style.Button.Blue"></style>

    <style name="Core.Style.ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Core.Style.Toolbar">
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@color/main_background</item>
    </style>


    <style name="Core.Style.ClickableLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Core.Style.ButtonText.NavigationIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_arrow_back</item>
        <item name="iconTint">@color/navigation_icons_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="fontPath">fonts/ProximaNova-Regular.ttf</item>
    </style>

    <style name="Core.Style.RestaurantCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Core.Restoran" />

    <style name="Core.Restoran.Rate">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green_text_rate</item>
    </style>

    <style name="Core.Restoran.Title">
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_text_title</item>
    </style>

    <style name="Core.Restoran.Title.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Core.Restoran.Title.Black.NotBold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Restoran.Subtitle">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_text_subtitle</item>
    </style>

    <style name="Core.Restoran.Favorite" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check_box_favorite_restoran</item>
        <item name="android:buttonTintMode">multiply</item>
    </style>

    <!-- Common features -->
    <style name="UserInteraction" />

    <style name="UserInteraction.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="UserInteraction.LikeDislikeRatingButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>